<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/selamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:text="Selamat datang!"
        android:textStyle="normal"
        android:textSize="12dp"
        android:layout_marginTop="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:lineSpacingExtra="-3dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AFILA"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selamat"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/logo"
        android:layout_marginTop="45dp"
        android:layout_marginRight="54dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Silahkan Masuk Akun"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="208dp"
        android:layout_marginLeft="40dp"
        android:textSize="14dp"
        />

    <TextView
        android:textSize="12dp"
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/akun"
        app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
            android:id="@+id/et_user"
            android:background="@drawable/border_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/user"/>
    <TextView
        android:textSize="12dp"
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_user"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/et_pass"
        android:background="@drawable/border_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/pass"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lupapass"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass"
        android:text="Lupa sandi?" />
    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:text="Masuk Akun"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bt_login"
        app:layout_constraintTop_toBottomOf="@+id/lupapass"/>
    <TextView
        android:id="@+id/craft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crafted by"
        android:textSize="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/logo2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/logo"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/craft"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afila"
        android:textSize="14dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="3.8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/logo2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>